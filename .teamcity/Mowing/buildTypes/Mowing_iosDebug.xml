<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Mowing_iosDebug</name>
  <description>This is a pipeline to do Mowing builds as set up in the build config from Mowing Default</description>
  <settings ref="DailyBuildTemplate">
    <options>
      <option name="artifactRules" value="" />
    </options>
    <disabled-settings>
      <setting-ref ref="RUNNER_3" />
    </disabled-settings>
    <parameters>
      <param name="branch" value="main" />
      <param name="buildProfile" value="iosDebug" />
      <param name="target" value="iOS" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_1" name="" type="ssh-deploy-runner">
        <conditions>
          <equals name="target" value="iOS" />
        </conditions>
        <parameters>
          <param name="jetbrains.buildServer.deployer.sourcePath" value="/Deploy/%buildProfile%/%pgfBuildId%/=&gt;%pgfBuildId%" />
          <param name="jetbrains.buildServer.deployer.ssh.transport" value="jetbrains.buildServer.deployer.ssh.transport.scp" />
          <param name="jetbrains.buildServer.deployer.targetUrl" value="192.168.0.99:TeamCityBuilds/%repository%Build/" />
          <param name="jetbrains.buildServer.deployer.username" value="Mikzor" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="PWD" />
          <param name="secure:jetbrains.buildServer.deployer.password" value="credentialsJSON:fe57d3be-8464-4076-bb73-75cc95573dd9" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcitySshKey" value="build_mac_ed25519" />
        </parameters>
      </runner>
      <runner id="RUNNER_7" name="Parameters set by build" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[echo "Parameters set by build:"
echo "Build Id: %pgfBuildId%"
echo "Build Number: %pgfBuildNum%"
echo "Bundle Id: %pgfBundleId%"
echo "Game Version: %pgfGameVersion%"
echo "Provisioning Profile: %pgfProvisioningProfile%"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="Build" type="unity">
        <parameters>
          <param name="arguments" value="-username %unityUsername% -password %unityPassword% -executeMethod %executionMethod% -serial %unitySerial% -keystorePath %keystorePath% -keystorePass %keystorePassword% -buildPath  %buildPath% -buildNumber %build.number% -buildProfile %buildProfile%" />
          <param name="buildTarget" value="iOS" />
          <param name="noGraphics" value="true" />
          <param name="projectPath" value="%teamcity.build.checkoutDir%" />
          <param name="teamcity.step.mode" value="default" />
          <param name="unityVersion" value="2020.3." />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements />
    <build-triggers />
    <cleanup />
  </settings>
</build-type>

